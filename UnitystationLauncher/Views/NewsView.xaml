<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             TextBlock.FontSize="18"
             x:Class="UnitystationLauncher.Views.NewsView">
  <ItemsControl Items="{Binding Commits}">
    <ItemsControl.ItemTemplate>
      <DataTemplate>
        <Border Margin="2" CornerRadius="6" Background="{DynamicResource ThemeControlMidBrush}" MaxWidth="180">
            <TextBlock Text="{Binding Message}" TextWrapping="Wrap" FontSize="10"/>
        </Border>
      </DataTemplate>
    </ItemsControl.ItemTemplate>
  </ItemsControl>
</UserControl>
